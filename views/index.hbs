<section class="container-fluid p-3 bg-dark">
    <div class="row">
        {{#each foodItems }}
            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-3 col-xl-3 col-12 p-3">
                <div class="card">
                    <img class="card-img-top" src="{{ this.image }}" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">{{ this.title }}</h5>
                        <p class="card-text">{{ this.description }}</p>
                        <p href="#" class="float-left text-success">Price : {{ this.price }}</p>
                        <a href="#" class="btn btn-primary float-right">Add to Cart</a>
                    </div>
                </div>
            </div>
        {{/each }}
    </div>
</section>
